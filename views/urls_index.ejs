  <!DOCTYPE html>
  <html lang="en">
  <head>
    <% include ./partials/_header %>
  </head>

<body>
  <ul>
    <% if (user) {%>
      <!-- Filter urls for userID -->
      <% for (const el in urls) { %>
        <% if (urls[el]['userID'] === user['id']) { %>
          <% const site = "urls/" + el%>
          <li><%= el %> - <a href = <%= urls[el]['url'] %>><%= urls[el]['url'] %></a> <a href=<%=site%>>Edit</a>
            <% const del = site + "/delete"%>
            <form method="POST" action=<%=del%>>
              <button type="delete" value="Delete">Delete</button>
            </form>
          </li>
          <% } %>
        <% } %>
    <% } else { %>
    <!-- Display all urls without edit/delete functions -->
      <% for (const el in urls) { %>
        <% const site = "urls/" + el%>
        <li><%= el %> - <a href = <%= urls[el]['url'] %>><%= urls[el]['url'] %></a></li>
      <% }; %>
    <% }; %>
  </ul>
</body>
</html>